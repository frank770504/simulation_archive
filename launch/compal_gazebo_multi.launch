<launch>

  <arg name="robot" default="agv2"/>
  <arg name="robot2" default="shelf"/>

  <!-- these are the arguments you can pass this launch file, for example paused:=true -->
  <arg name="paused" default="false"/>
  <arg name="use_sim_time" default="true"/>
  <arg name="gui" default="true"/>
  <arg name="headless" default="false"/>
  <arg name="debug" default="false"/>

  <!-- We resume the logic in empty_world.launch, changing only the name of the world to be launched -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
<!--
    <arg name="world_name" value="$(find compal_gazebo)/worlds/compal.world"/>
-->
    <arg name="world_name" value="$(find compal_gazebo)/worlds/test.world"/>
    <arg name="debug" value="$(arg debug)" />
    <arg name="gui" value="$(arg gui)" />
    <arg name="paused" value="$(arg paused)"/>
    <arg name="use_sim_time" value="$(arg use_sim_time)"/>
    <arg name="headless" value="$(arg headless)"/>
  </include>

  <!-- Load the URDF into the ROS Parameter Server -->
  <param name="robot_description"
	 command="$(find xacro)/xacro.py '$(find agv2_description)/urdf/agv2.urdf.xacro'" />

  <!-- Load the URDF into the ROS Parameter Server -->
  <param name="shelf_description"
	 command="$(find xacro)/xacro.py '$(find agv2_description)/urdf/shelf.urdf.xacro'" />

  <group ns="$(arg robot)">
    <param name="tf_prefix" value="$(arg robot)_tf" />
    <include file="$(find compal_gazebo)/launch/include/$(arg robot)_multi.launch.xml">
      <arg name="pos_x" value="0"/>
      <arg name="pos_y" value="2"/>
      <arg name="model" value="$(arg robot)"/>
    </include>
  </group>
  
  <group ns="$(arg robot2)">
    <param name="tf_prefix" value="$(arg robot2)_tf" />
    <include file="$(find compal_gazebo)/launch/include/$(arg robot2)_multi.launch.xml">
      <arg name="pos_x" value="0"/>
      <arg name="pos_y" value="0"/>
      <arg name="model" value="$(arg robot2)"/>
    </include>
  </group>


  <!-- ros_control htcbot launch file -->
  <remap to="$(arg robot)/cmd_vel" from="cmd_vel" />
  <node pkg="tf" type="static_transform_publisher" name="tf_map_broadcaster" args="0 0 0 0 0 0 map /agv2_tf/odom 50"/>
<!--
    may not be the reall pose, it is just an estimation
-->
  <node pkg="tf" type="static_transform_publisher" name="tf_laser_broadcaster" args="0 -0.50 0.135 -1.57 0 0 /agv2_tf/base_link /agv2_tf/laser_link 50"/>
    <!-- RVIZ -->
  <node pkg="rviz" type="rviz" name="rviz" output="screen" args="-d $(find compal_gazebo)/launch/laser_show.rviz"/>
<!--
  <include file="$(find agv2_control)/launch/$(arg robot)/$(arg robot)_control_sim.launch" />
-->
<!--
  <include file="$(find htcbot_gazebo)/launch/include/data_record.xml"/>
-->
</launch>
